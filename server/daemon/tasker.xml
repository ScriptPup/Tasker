<service>
	<id>tasker.exe</id>
	<name>Tasker</name>
	<description>Tasker web service (Used to serve as extended automation manager)</description>
	<executable>S:\nodejs\node.exe</executable>
	<logmode>rotate</logmode>
	<argument>--harmony</argument>
	<argument>S:\nodejs\global\node_modules\qckwinsvc\node_modules\node-windows\lib\wrapper.js</argument>
	<argument>--file</argument>
	<argument>S:\Projects\Tasker\server\index.js</argument>
	<argument>--log</argument>
	<argument>Tasker wrapper</argument>
	<argument>--grow</argument>
	<argument>0.25</argument>
	<argument>--wait</argument>
	<argument>1</argument>
	<argument>--maxrestarts</argument>
	<argument>3</argument>
	<argument>--abortonerror</argument>
	<argument>n</argument>
	<argument>--stopparentfirst</argument>
	<argument>undefined</argument>
	<stoptimeout>30sec</stoptimeout>
	<workingdirectory>S:\Projects\Tasker</workingdirectory>
</service>